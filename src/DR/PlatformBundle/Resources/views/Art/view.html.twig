{% extends "DRPlatformBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Visualiser{% endblock %}

    {% block body %}

        {# visualiser #}
        <div class="col-lg-12">
            <div style="color:#d9534f">
                <h1>Artpurchase</h1>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Nom</td>
                        <td align="center">Lien</td>
                        <td align="center">Prix</td>
                        <td align="center">Références</td>
                        <td align="center">Type</td>
                        <td align="center">Dossier</td>
                        <td align="center">BDC</td>
                        <td align="center">Fournisseur</td>
                        <td align="center">Client</td>
                        <td align="center">Date début</td>
                        <td align="center">Date fin</td>
                        <td align="center">Zone</td>
                        <td align="center">Support</td>
                        <td align="center">Exemplaires</td>
                        <td align="center">Commentaires</td>
                    </tr>
                    {% for artpurchase in artpurchases %}
                        <tr>
                            <td align="center">{{ artpurchase.getId }}</td>
                            <td align="center">{{ artpurchase.getVisualname }}</td>
                            <td align="center"><a href="{{ artpurchase.getLinkfile }}">Lien</a></td>
                            <td align="center">{{ artpurchase.getCost }}</td>
                            <td align="center">{{ artpurchase.getRefnum }}</td>
                            <td align="center">{{ artpurchase.getType.getName }}</td>
                            <td align="center">{{ artpurchase.getFolder.getName }}</td>
                            <td align="center">{{ artpurchase.getOrderform }}</td>                    
                            <td align="center">{{ artpurchase.getSupplier.getSuppliersociety }}</td>
                            <td align="center">{{ artpurchase.getCustomer.getCustomersociety }}</td>
                            <td align="center">{{ artpurchase.getStartdate|date('Y-m-d') }}</td>
                            <td align="center">{{ artpurchase.getEnddate|date('Y-m-d') }}</td>
                            <td align="center"> TODO </td>
                            <td align="center"> TODO </td>
                            <td align="center">{{ artpurchase.getCopy }}</td>
                            <td align="center">{{ artpurchase.getComment }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

        {# ---------------------------------------------------------------------------------------------- #}
        <div class="col-lg-12">
            <div class="col-lg-2" id ="view_type">
                <div style="color:#d9534f">
                    <h1 align="center">Type</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Nom</td>
                    </tr>
                    {% for type in types %}
                        <tr>
                            <td align="center">{{ type.getId }}</td>
                            <td align="center">{{ type.getName }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-lg-1"></div>

            <div class="col-lg-3" id="view_folder">
                <div style="color:#d9534f">
                    <h1 align="center">Folder</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Numéro de référence</td>
                        <td align="center">Nom</td>
                    </tr>
                    {% for folder in folders %}
                        <tr>
                            <td align="center">{{ folder.getId }}</td>
                            <td align="center">{{ folder.getRefnum }}</td>
                            <td align="center">{{ folder.getName }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-lg-1"></div>

            <div class="col-lg-2" id="view_supplier">
                <div style="color:#d9534f">
                    <h1 align="center">Supplier</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Nom du fournisseur</td>
                    </tr>
                    {% for supplier in suppliers %}
                        <tr>
                            <td align="center">{{ supplier.getId }}</td>
                            <td align="center">{{ supplier.getSuppliersociety }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-lg-1"></div>

            <div class="col-lg-2" id="view_customer">
                <div style="color:#d9534f">
                    <h1 align="center">Customer</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Nom du client</td>
                    </tr>
                    {% for customer in customers %}
                        <tr>
                            <td align="center">{{ customer.getId }}</td>
                            <td align="center">{{ customer.getCustomersociety }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="col-lg-2"></div>

            <div class="col-lg-2" id="view_area">
                <div style="color:#d9534f">
                    <h1 align="center">Area</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Pays</td>
                    </tr>
                    {% for area in areas %}
                        <tr>
                            <td align="center">{{ area.getId }}</td>
                            <td align="center">{{ area.getCountry }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-lg-4"></div>

            <div class="col-lg-2" id="view_support">
                <div style="color:#d9534f">
                    <h1 align="center">Support</h1>
                </div>
                <table class="table table-hover">
                    <tr style="font-weight: bold;" class="danger">
                        <td align="center">#</td>
                        <td align="center">Type de support</td>
                    </tr>
                    {% for support in supports %}
                        <tr>
                            <td align="center">{{ support.getId }}</td>
                            <td align="center">{{ support.getName }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endblock %}