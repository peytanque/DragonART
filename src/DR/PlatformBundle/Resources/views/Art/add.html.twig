{% extends "DRPlatformBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Ajouter{% endblock %}

    {% block body %}

        <div class="container">
            <h3>Ajouter un Achat</h3>
            <form class="form-horizontal">
                <div class="well">
                    {{ form_start(addArtpurchase) }}
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.visualname, "Nom du visuel : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.visualname, {'attr': {'class': 'form-control', 'placeholder': 'Une pomme'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.linkfile, "Lien : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.linkfile, {'attr': {'class': 'form-control', 'placeholder': 'wwww.google.com'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.cost, "Prix : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.cost, {'attr': {'class': 'form-control', 'placeholder': '5,00€'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.refnum, "Numéro de référence : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.refnum, {'attr': {'class': 'form-control', 'placeholder': 'DKFNIZNFN5896'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.type, "Type : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.type, {'attr': {'class': 'form-control', 'placeholder': 'TODO Liste'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.folder, "Dossier : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.folder, {'attr': {'class': 'form-control', 'placeholder': 'TODO Liste'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.orderform, "Bon de commande : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.orderform, {'attr': {'class': 'form-control', 'placeholder': 'BB8'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.supplier, "Fournisseur : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.supplier, {'attr': {'class': 'form-control', 'placeholder': 'TODO Liste'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.customer, "Client : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.customer, {'attr': {'class': 'form-control', 'placeholder': 'TODO Liste'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.startdate, "Date de début : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.startdate, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.enddate, "Date de fin : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.enddate, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.area, "Zone : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.area, {'attr': {'class': 'form-control', 'placeholder': 'TODO Array'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.support, "Support : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.support, {'attr': {'class': 'form-control', 'placeholder': 'TODO Array'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.copy, "Nombre exemplaires : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.copy, {'attr': {'class': 'form-control', 'placeholder': '5'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        <div class="control-label col-lg-2">
                            {{ form_label(addArtpurchase.comment, "Commentaire : ") }}
                        </div>
                        <div class="col-lg-9">
                            {{ form_widget(addArtpurchase.comment, {'attr': {'class': 'form-control', 'placeholder': 'Ce commentaire ne sert a rien'}}) }}
                        </div>
                    </div></br>
                    <div class="form-group">
                        {{form_widget(addArtpurchase.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    </div>
                    {{ form_end(addArtpurchase) }}
                </div>
            </div>
        </form>

        <div class="container">
            {# Ajouter un Type#}
            <div id="formType" class="col-lg-6">
                <h3>Ajouter un Type</h3>
                <div class="well">
                    {{ form_start(addType) }}
                    <div class="form-group" id="name_formType">
                        {{ form_label(addType.name, "Nom : ") }}
                        {{ form_widget(addType.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du type'}}) }}
                    </div>
                    {{ form_widget(addType.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addType) }}
                </div>
            </div>
            {# Ajouter un Dossier#}
            <div id="formFolder" class="col-lg-6">
                <h3>Ajouter un Dossier</h3>
                <div class="well">
                    {{ form_start(addFolder) }}
                    <div class="form-group" id="refnum_formFolder">
                        {{ form_label(addFolder.refnum, "Références : ") }}
                        {{ form_widget(addFolder.refnum, {'attr': {'class': 'form-control', 'placeholder': 'Références du dossier'}}) }}
                    </div>
                    <div class="form-group" id="name_formFolder">
                        {{ form_label(addFolder.name, "Nom : ") }}
                        {{ form_widget(addFolder.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du dossier'}}) }}
                    </div>
                    {{form_widget(addFolder.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addFolder) }}
                </div>
            </div>
            {# Ajouter un Fournisseur#}
            <div id="formSupplier" class="col-lg-6">
                <h3>Ajouter un Fournisseur</h3>
                <div class="well">
                    {{ form_start(addSupplier) }}
                    <div class="form-group" id="society_formSupplier">
                        {{ form_label(addSupplier.suppliersociety, "Société : ") }}
                        {{ form_widget(addSupplier.suppliersociety, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la société'}}) }}
                    </div>
                    {{form_widget(addSupplier.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addSupplier) }}
                </div>
            </div>
            {# Ajouter un Client#}
            <div id="formCustomer" class="col-lg-6">
                <h3>Ajouter un Client</h3>
                <div class="well">
                    {{ form_start(addCustomer) }}
                    <div class="form-group" id="society_formCustomer">
                        {{ form_label(addCustomer.customersociety, "Société : ") }}
                        {{ form_widget(addCustomer.customersociety, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la société'}}) }}
                    </div>
                    {{form_widget(addCustomer.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addCustomer) }}
                </div>
            </div>
            {# Ajouter une Zone#}
            <div id="formArea" class="col-lg-6">
                <h3>Ajouter une Zone</h3>
                <div class="well">
                    {{ form_start(addArea) }}
                    <div class="form-group" id="country_formArea">
                        {{ form_label(addArea.country, "Pays : ") }}
                        {{ form_widget(addArea.country, {'attr': {'class': 'form-control', 'placeholder': 'Nom du pays'}}) }}
                    </div>
                    {{form_widget(addArea.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addArea) }}
                </div>
            </div>
            {# Ajouter un Support#}
            <div id="formSupport" class="col-lg-6">
                <h3>Ajouter un Support</h3>
                <div class="well">
                    {{ form_start(addSupport) }}
                    <div class="form-group" id="name_formSupport">
                        {{ form_label(addSupport.name, "Nom : ") }}
                        {{ form_widget(addSupport.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du support'}}) }}
                    </div>
                    {{form_widget(addSupport.save, {'label':'Ajouter','attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(addSupport) }}
                </div>
            </div>
        </div>
